@model PlatDiplom.Models.PlatModel.PlatForDNView
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true"> X </button>

        <h4>Create registry </h4>

    </div>
    <div class="modal-body">

        @if (Model.Payments.Count() != 0)
        {
            <table class="table table-bordered" id="PartialTable">
                <thead>
                    <tr style="position:sticky; top:80px;">
                        <th>№</th>
                        <th>Payment</th>
                        <th>Sum</th>

                    </tr>
                </thead>
                <tbody>


                    @{var i = 1;
                        foreach (var item in Model.Payments)
                        {

                            <tr id="@Html.DisplayFor(model => item.id_plat)" class="id_plat">
                                <td>@i	</td>
                                <td class="col-md-9 col-sm-9 " >	@Html.DisplayFor(model => item.PurOfPayment)</td>
                                <td class="">	@Html.DisplayFor(model => item.sum)</td>
                            </tr>
                            i = i + 1;
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td>Сумма счета</td>
                        <td class="PlatSum"><b>
                            @Html.DisplayFor(model => model.SelectedSum)
                            @Html.DisplayFor(model => model.SelectedCurrency)</b></td>
                    </tr>

                </tfoot>
            </table>
            <input type="button" class="btn btn-success" value="GenDN" id="GenDN">
            <a href="" id="LinkDoc"></a>
        }


    </div>
</div>

<script>
    $(`#GenDN`).click(function () {
        var checkedElements = $('#PartialTable tr.id_plat');
        var resList = [];
        checkedElements.each(function (i) {
            resList.push({ Id:checkedElements.eq(i).attr('id') })
        });
        $.ajax({
            type: `POST`,
            url: `/GenDocument/GenDN`,
            data: {
                platList: resList 
            },
            success: function (data) {
                 //  console.log(data);
                 //  alert("Сделаль!");
             
                if (data.Result == "Ok") {

                    $("#LinkDoc").text(data.Doc.Name);
                    $("a[href]").attr("href",data.Doc.Link)
                  
                }

            },
            error: function (err) {
                console.log(err);
            }
        });
    });
</script>
